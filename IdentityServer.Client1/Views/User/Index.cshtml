@using Microsoft.AspNetCore.Authentication

@{
    ViewData["Title"] = "Index";
}

<h1>Only Authorized Users.</h1>

<h3>Claims</h3>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Claim Type</th>
        <th>Claim Value</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in User.Claims)
    {
        <tr>
            <td>@item.Type</td>
            <td>@item.Value</td>
        </tr>
    }
    </tbody>
</table>

<h3>Authentication</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth Type</th>
            <th>Auth Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties?.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>